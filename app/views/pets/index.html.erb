<div class="container">
  <h1>Lost Kitty</h1>

  <div class="row">
    <% @pets.each do |pet| %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= pet.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= pet.species %></h6>
          <%= link_to 'See details', pet_path(pet), class: 'card-link' %>
        </div>
      </div>

    <% end %>
  </div>
  <%= link_to 'Report pet', new_pet_path, class: 'btn btn-primary mt-5' %>
</div>
